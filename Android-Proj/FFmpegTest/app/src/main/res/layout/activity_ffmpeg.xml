<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.thinking.ffmpegtest.FFmpegActivity">

    <Button
        android:id="@+id/btn_test_lib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="测试ffmpeg库" />

    <Button
        android:id="@+id/btn_test_steam_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="测试从文件生成实时流" />

    <Button
        android:id="@+id/btn_test_steam_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="测试相机实时流" />

</LinearLayout>
